{
  "name": "sensor-snap",
  "version": "0.1.22",
  "private": false,
  "description": "Vue library to generate Sensors Widget with Open Mobile Alliance references as inputs.",
  "author": {
    "name": "Edouard",
    "email": "ed@getlarge.eu",
    "github": "getlarge"
  },
  "scripts": {
    "start:dev": "node build-utils/update-index-file.js && vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "docs:components1": "jsdoc2md -c jsdoc-conf.json src/* > ./docs/components/README.md",
    "docs:components": "jsdoc2md -c jsdoc-conf.json src/components/* > ./docs/components/README.md",
    "docs:md": "npm run docs:components",
    "docs:dev": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress dev docs",
    "docs:build": "npm run docs:md ; cp ./README.md ./docs/readme/. ; vuepress build docs",
    "docs:serve": "light-server -s public -p 7000 --servePrefix /sensor-snap/",
    "test": "vue-cli-service test:unit",
    "lib:build": "node build-utils/update-index-file.js ; vue-cli-service build --target lib --name SensorSnap ./src/components/SensorSnap.vue --dest dist",
    "lib:build-wc": "node build-utils/update-index-file.js ; vue-cli-service build --target wc --name SensorSnap ./src/components/SensorSnap.vue --dest dist"
  },
  "homepage": "https://www.npmjs.com/package/sensor-snap",
  "repository": {
    "type": "git",
    "url": "git+https://framagit.org/aloes/sensor-snap.git"
  },
  "bugs": {
    "url": "https://framagit.org/aloes/sensor-snap/issues"
  },
  "files": [
    "dist/*",
    "package.json",
    "README.md"
  ],
  "module": "dist/SensorSnap.common.js",
  "main": "dist/SensorSnap.umd.js",
  "unpkg": "dist/SensorSnap.umd.min.js",
  "peerDependencies": {
    "animejs": "^3.0.1",
    "vue": "^2.6.6"
  },
  "dependencies": {
    "animejs": "^3.0.1",
    "vue": "^2.6.6"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-unit-mocha": "^3.4.0",
    "@vue/cli-service": "^3.5.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.20",
    "aloes-handlers": "^1.2.4",
    "babel-eslint": "^10.0.1",
    "chai": "^4.1.2",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "jsdoc-to-markdown": "^5.0.0",
    "jsdoc-vue": "^1.0.0",
    "vue-template-compiler": "^2.5.21",
    "vuepress": "^1.0.0-alpha.47"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": [
    "/dist/",
    "/public/",
    "/docs/",
    "/src/components/index.js",
    "/node_modules/",
    "/tests/unit/*.spec.js"
  ],
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "all"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
